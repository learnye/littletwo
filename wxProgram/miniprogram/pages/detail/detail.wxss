/* pages/detail/detail.wxss */
page{
  background-color: #F2F2F2;
}
.container{
  width: 100%;
}
.product image{
  width: 100%;
  height: 600rpx;
}
.detail_content{
  padding: 20rpx;
}
.content_header{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.content_wraper{
  display: flex;
  flex-direction: column;
}
.content_wraper .t1,.content_wraper .t2,.content_wraper .t3{
  margin-bottom: 20rpx;
}
.content_wraper .t2{
  font-size: 20rpx;
  color: #ccc;
}
.content_wraper .t3{
  font-size: 40rpx;
  color: #ff3366;
}
.content_header .love{
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 20rpx;
  color: #ccc;
}
.content_header .love image{
  width: 70rpx;
  height: 70rpx;
  margin-bottom: 10rpx;
}
.detail_image{
  padding: 20rpx;
  font-size: 20rpx;
  margin-bottom: 120rpx;
}
.detail_image image{
  width: 100%;
  height: 600rpx;
}
.detail_bar{
  position: fixed;
  display: flex;
  width: 100%;
  height: 120rpx;
  background-color: #fff;
  bottom: 0;
  left: 0;
  border-top: 1px solid #ccc;
  align-items: center;
  justify-content: space-around;
}
.detail_bar image{
  width: 70rpx;
  height: 70rpx;
}
.image_icon{
  position: relative;
  width: 70rpx;
  height: 70rpx;
}
.detail_bar .num_icon{
  width: 40rpx;
  height: 30rpx;
  text-align: center;
  font-size: 20rpx;
  background-color: #ff3366;
  border-radius: 40rpx;
  color: #fff;
  position: absolute;
  top: 0;
  left: 40rpx;
}
.cart_btn{
  width: 200rpx;
  height: 70rpx;
  border: 1px solid #ff3366;
  border-radius: 40rpx;
  color: #ff3366;
  text-align: center;
}
.cart_btn text{
  line-height: 70rpx;
  font-size: 24rpx;
}
.cart_btn1{
  width: 200rpx;
  height: 70rpx;
  /* border: 1px solid #ff3366; */
  background-color: #ff3366;
  border-radius: 40rpx;
  color: #fff;
  text-align: center;
}
.cart_btn1 text{
  line-height: 70rpx;
  font-size: 24rpx;
}